<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Masuk"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Username"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:layout_marginVertical="150dp"
        />
    <EditText
        android:id="@+id/input_username"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="text"
        android:hint="Username"
        android:paddingHorizontal="15dp"
        android:background="@drawable/rounded_corners"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="180dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Password"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:layout_marginVertical="240dp"
        />
    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:paddingHorizontal="15dp"
        android:background="@drawable/rounded_corners"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="275dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="375dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="atau masuk dengan"
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#808A93"/>
    <ImageButton
        android:id="@+id/google_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="425dp"
        android:background="@drawable/rounded_corners"
        android:layout_marginHorizontal="75dp"
        android:src="@drawable/google" />

    <ImageButton
        android:id="@+id/apple_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="425dp"
        android:background="@drawable/rounded_corners"
        android:layout_marginHorizontal="150dp"
        android:src="@drawable/apple"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/facebook_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="425dp"
        android:background="@drawable/rounded_corners"
        android:layout_marginHorizontal="225dp"
        android:src="@drawable/facebook"/>

    <TextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="500dp"
        android:text="Belum memiliki akun?"
        android:paddingLeft="60dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="500dp"
        android:text="Daftar Sekarang"
        android:paddingLeft="200dp"
        android:textColor="#27AE60"
        android:clickable="true"/>
    <Button
        android:id="@+id/button_loggin"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginVertical="550dp"
        android:layout_gravity="center"
        android:text="Masuk"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/hijau_button"/>

</RelativeLayout>